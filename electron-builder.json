{
  "appId": "com.flowtimeapp",
  "productName": "FlowTime",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "FlowTime"
  },
  "mac": {
    "target": "dmg",
    "icon": "build/icon.png"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build/icon.png"
  }
}
